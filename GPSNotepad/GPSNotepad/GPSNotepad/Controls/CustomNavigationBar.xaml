<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPSNotepad.Controls.CustomNavigationBar"
             x:Name="customNavigationBar"
             BackgroundColor="{DynamicResource navigationBar}">

    <Grid.RowDefinitions>

        <RowDefinition Height="1*"/>
        <RowDefinition Height="8*"/>
        <RowDefinition Height="1*"/>

    </Grid.RowDefinitions>

    <Grid.ColumnDefinitions>

        <ColumnDefinition Width="2*"/>
        <ColumnDefinition Width="6*"/>
        <ColumnDefinition Width="2*"/>
        
    </Grid.ColumnDefinitions>

    <Image Grid.Row="1"
           Grid.Column="0" 
           Source="{DynamicResource iconLeft}">

        <Image.GestureRecognizers>

            <TapGestureRecognizer Command="{Binding ImageLeftTapCommand, Source={x:Reference customNavigationBar}}"/>

        </Image.GestureRecognizers>
        
    </Image>

    <Label Grid.Row="1"
           Grid.Column="1"     
           Text="{Binding Title, Source={x:Reference customNavigationBar}}"
           TextColor="{DynamicResource labelNavBar}"
           FontSize="Large"
           FontFamily="Montserrat"
           FontAttributes="Bold"
           VerticalOptions="CenterAndExpand"
           HorizontalOptions="CenterAndExpand"/>

</Grid>