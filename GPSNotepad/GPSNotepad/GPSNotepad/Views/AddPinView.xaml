<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GPSNotepad.Views.AddPinView"
             Title="Add Pin">

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="MenuItem2" 
                     Order="Primary" 
                     Icon="save.png" 
                     Priority="0" 
                     Command="{Binding SaveTapCommand}" 
                     CommandParameter = "1"/>
    </ContentPage.ToolbarItems>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Image HorizontalOptions="Center"
               Aspect="AspectFit"
               Source="{Binding PinImage}" >
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ImageTapCommand}"/>
                </Image.GestureRecognizers>
            </Image>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <Entry Grid.Column="1" 
               Grid.Row="1"
               Placeholder="Name"
               Text="{Binding EntryNameText, Mode=TwoWay}"/>
            <Entry Grid.Column="1" 
               Grid.Row="2"
               Placeholder="Latitude"
               Text="{Binding EntryLatitudeText, Mode=TwoWay}"/>
            <Entry Grid.Column="1" 
               Grid.Row="3" 
               Placeholder="Longitude"
               Text="{Binding EntryLongitudeText, Mode=TwoWay}"/>
            <Editor Grid.Column="1"
                Grid.Row="4"
                Placeholder="Description" 
                Text="{Binding EditorText, Mode=TwoWay}"
                FlexLayout.Basis="100%"
                BackgroundColor="LightGray" 
                MaxLength="30"/>
        </Grid>
        <Grid Grid.Row="2">
            <ContentView Content="{Binding Map}"/>
        </Grid>
    </Grid>
</ContentPage>